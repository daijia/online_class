<% provide(:title, '更新课堂') %>
<h1>课程创建</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@lesson) do |f| %>
        <%= render 'shared/error_messages', object: f.object%>
        <%= f.label :name, "课堂主题"%>
        <%= f.text_field :name %>

        <%= f.label :description, "课堂简介"%>
        <%= f.text_area :description %>

        <%= f.hidden_field :course_id %>

        <%= f.label :start_time, "开始时间"%>
        <%= f.datetime_local_field :start_time %>

        <%= f.label :duration, "课堂时长(分钟)"%>
        <%= f.text_field :duration %>

        <%= f.label :homework, "课后作业"%>
        <%= f.text_area :homework %>

        <%= f.submit "更新课堂", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>